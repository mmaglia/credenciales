{% extends 'base.html.twig' %}

{% block title %}Upload{% endblock %}

{% block body %}

    <h1>Agregar nuevas credenciales</h1>

    {{ form_start(form) }}
        {{ form_row(form.credencial) }}
        {# <button class="btn btn-primary float-right">{{ button_label|default('Subir Archivos') }}</button> #}
